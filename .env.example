# Twitter API Credentials (OAuth 1.0a - Required)
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Twitter Bearer Token (OAuth 2.0 - Optional, for read operations)
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Auto-delete failed drafts configuration
# Set to "true" to automatically delete drafts when publishing fails
# Set to "false" to preserve drafts for manual retry (default: true)
AUTO_DELETE_FAILED_DRAFTS=true